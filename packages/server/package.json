{
  "name": "@example/lawn-mower-server",
  "version": "1.0.0",
  "description": "Lawn Mower Demo - Game Server",
  "type": "module",
  "main": "./dist/main.js",
  "scripts": {
    "start": "node dist/main.js",
    "dev": "tsc && node --watch dist/main.js",
    "dev:watch": "concurrently \"tsc --watch\" \"node --watch dist/main.js\"",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rimraf dist",
    "test": "vitest run"
  },
  "dependencies": {
    "@esengine/ecs-framework": "^2.7.1",
    "@esengine/server": "^4.2.0",
    "@esengine/database-drivers": "^1.1.1",
    "@esengine/database": "^1.1.1",
    "@example/lawn-mower-shared": "workspace:*",
    "mongodb": "^6.12.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "rimraf": "^5.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.8.0",
    "vitest": "^2.0.0"
  }
}